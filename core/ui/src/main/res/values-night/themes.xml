<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/yellow_100</item>
        <item name="colorOnSecondary">@color/gray_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurface</item>

        <item name="colorError">@color/error_red_light</item>
        <item name="colorOnError">?attr/colorError</item>

        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
        <item name="snackbarButtonStyle">@style/SnackbarActionButton</item>
        <item name="materialCardViewStyle">@style/AppCardView</item>
    </style>

    <style name="AppBarLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorSurface">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="BackdropThemeOverlay" parent="">
        <item name="android:background">@color/yellow_100</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

</resources>