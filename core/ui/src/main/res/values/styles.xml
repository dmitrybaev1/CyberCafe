<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/raleway_font_family</item>
    </style>

    <style name="TitleTextViewStyle" parent="TextViewStyle">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ErrorTextViewStyle" parent="TextViewStyle">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text</item>
        <item name="hintTextColor">@color/edit_text</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="SnackbarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnackbarActionButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

</resources>